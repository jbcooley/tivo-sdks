<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
            <section name="Tivo.Hme.Samples.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
        </sectionGroup>
    </configSections>
    <applicationSettings>
        <Tivo.Hme.Samples.Properties.Settings>
            <setting name="MusicPath" serializeAs="String">
                <value>.\music</value>
            </setting>
            <setting name="ImagePath" serializeAs="String">
                <value>.\pictures</value>
            </setting>
        </Tivo.Hme.Samples.Properties.Settings>
    </applicationSettings>
	<system.diagnostics>
		<sources>
			<source name="HmeProtocol"
			  switchName="sourceSwitch"
			  switchType="System.Diagnostics.SourceSwitch">
				<listeners>
					<add name="console"
					  type="System.Diagnostics.ConsoleTraceListener">
						<filter type="System.Diagnostics.EventTypeFilter"
						  initializeData="Warning"/>
					</add>
					<add name="myListener"/>
					<remove name="Default"/>
				</listeners>
			</source>
      <source name="ServerStatus"
			  switchName="sourceSwitch2"
			  switchType="System.Diagnostics.SourceSwitch">
        <listeners>
          <add name="console"
					  type="System.Diagnostics.ConsoleTraceListener">
            <filter type="System.Diagnostics.EventTypeFilter"
						  initializeData="Warning"/>
          </add>
          <add name="httpListener"/>
          <remove name="Default"/>
        </listeners>
      </source>
      <source name="HttpProtocol"
              switchName="httpSwitch"
              switchType="System.Diagnostics.SourceSwitch">
        <listeners>
          <add name="httpListener"/>
        </listeners>
      </source>
		</sources>
		<switches>
			<add name="sourceSwitch" value="Information"/>
      <add name="sourceSwitch2" value="Information"/>
      <add name="httpSwitch" value="Information"/>
		</switches>
		<sharedListeners>
			<add name="myListener"
			  type="System.Diagnostics.TextWriterTraceListener"
			  initializeData="myListener.log">
				<filter type="System.Diagnostics.EventTypeFilter"
				  initializeData="Error"/>
			</add>
      <add name="httpListener"
			  type="System.Diagnostics.TextWriterTraceListener"
			  initializeData="httpListener.log">
        <filter type="System.Diagnostics.EventTypeFilter"
				  initializeData="Information"/>
      </add>
		</sharedListeners>
	</system.diagnostics>
</configuration>